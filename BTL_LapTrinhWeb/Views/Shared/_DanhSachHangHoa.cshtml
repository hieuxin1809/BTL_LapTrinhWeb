@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutCustomer";
}

<!-- Single Page Header start -->
@RenderSection("BreadCum", required: false)
<!-- Single Page Header End -->
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">HShop 2023</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        @await Html.PartialAsync("_TimKiemPanel")
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits">Sắp Xếp</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" onchange="sortProducts(this.value)">
                                <option value="">Nothing</option>
                                <option value="price_asc">Giá từ Thấp đến Cao</option>
                                <option value="price_desc">Giá từ Cao đến Thấp</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            @await Component.InvokeAsync("MenuLoai", new { isDefaultView  = true})
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#fruits').on('change', function () {
                var sortOrder = $(this).val();
                $.ajax({
                    url: '@Url.Action("SortProducts", "HangHoa")',
                    type: 'GET',
                    data: {
                        sortOrder: sortOrder,
                        loai: '@ViewBag.Loai',
                        page: '@ViewBag.CurrentPage'
                    },
                    success: function (result) {
                        $('.row.g-4.justify-content-center').html(result);
                    },
                    error: function (xhr, status, error) {
                        alert('Có lỗi xảy ra: ' + error);
                    }
                });
            });
        });
    </script>
}

@model BTL_LapTrinhWeb.ViewModels.ChangePasswordVM
@{
	ViewData["Title"] = "Profile";
	Layout = "_LayoutProfile";
}
<h5>ĐỔI MẬT KHẨU</h5>

<div class="container-fluid">
	<div class="container py-5">
		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success" role="alert">
				@TempData["SuccessMessage"]
			</div>
		}
		<form asp-action="ChangePassword" method="post" enctype="multipart/form-data">
			<div class="row">
				<div class="row">
					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.OldPassword"></label><sup>*</sup>
						<input asp-for="@Model.OldPassword" class="form-control" />
						<span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.NewPassword"></label><sup>*</sup>
						<input asp-for="@Model.NewPassword" class="form-control" />
						<span asp-validation-for="@Model.NewPassword" class="text-danger" ></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.ConfirmPassword"></label><sup>*</sup>
						<input asp-for="@Model.ConfirmPassword" class="form-control"/>
						<span asp-validation-for="@Model.ConfirmPassword" class="text-danger" ></span>
					</div>
				</div>
				<div class="w-25">
					<button type="submit" class="btn border-secondary py-3 px-4 w-100 text-primary mt-5">Đổi mật khẩu</button>
				</div>
			</div>
		</form>
	</div>
</div>
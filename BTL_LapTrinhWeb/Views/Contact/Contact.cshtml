@model BTL_LapTrinhWeb.ViewModels.ContactVM
@{
    ViewData["Title"] = "Contact";
}


<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.899931937444!2d105.79118757488296!3d21.035511979896578!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab462a3db4f1%3A0x39e1b3ecf1e7cb6d!2zMyBD4bqndSBHaeG7g2ksIEPGoSBHaeG7g2ksIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1698147352809!5m2!1svi!2s"
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
                <div class="col-lg-7">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }
                    <form asp-action="Contact" enctype="multipart/form-data">
                        <input asp-for="@Model.Name" class="w-100 form-control border-0 py-3 mb-4" placeholder="Your Name">
                        <span asp-validation-for="@Model.Name" class="text-danger py-3 mb-4"></span>

                        <input asp-for="@Model.Email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email">
                        <span asp-validation-for="@Model.Email" class="text-danger py-3 mb-4"></span>

                        <textarea asp-for="@Model.Message" class="w-100 form-control border-0 py-3 mb-4" rows="5" cols="10" placeholder="Your Message"></textarea>
                        <span asp-validation-for="@Model.Message" class="text-danger mb-4"></span>

                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Submit</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">3 Cầu giấy, Hà Nội, Việt Nam</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Liên hệ chúng tôi</h4>
                            <p class="mb-2">hoangvanhieu133@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Điện thoại</h4>
                            <p class="mb-2">(+84)876767151</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
@model BTL_LapTrinhWeb.ViewModels.ForgotPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_LayoutLoginRegister";
}

<div class="container-fluid position-relative bg-white d-flex p-0">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Sign In Start -->
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a asp-action="Index" asp-controller="Home" class="">
                            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>THSHOP</h3>
                        </a>
                        <h3>Đổi mật khẩu</h3>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Username" class="form-control" id="floatingInput" placeholder="abcxyz1234">
                            <label asp-for="@Model.Username" for="floatingInput"></label>
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="@Model.Email" for="floatingInput"></label>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="@Model.NewPassword" type="password" class="form-control" id="floatingPassword" placeholder="Mật khẩu">
                            <label asp-for="@Model.NewPassword" for="floatingPassword"></label>
                            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Xác nhận</button>
                    </form>
                    <p><a asp-controller="KhachHang" asp-action="DangNhap">Đăng nhập</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Sign In End -->
</div>